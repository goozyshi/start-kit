 * 基于 Vue3 + Vite 标准规范
 */

:root {
  --primary-color: #d132ff;
  --bg-color: #151515;
  --bg-color-popup: #1c1a1e;
  --bg-color-gray: rgba(255, 255, 255, 0.1);
  --bg-color-mask: rgba(255, 255, 255, 0.6);
  --bg-color-6: rgba(255, 255, 255, 0.06);
  --border-color: rgba(255, 255, 255, 0.04);
  --border-color-8: rgba(255, 255, 255, 0.08);
  --text-color-2: rgba(255, 255, 255, 0.2);
  --text-color-3: rgba(255, 255, 255, 0.3);
  --text-color-5: rgba(255, 255, 255, 0.5);
  --text-color-6: rgba(255, 255, 255, 0.6);
  --text-color-7: rgba(255, 255, 255, 0.7);
  --text-color-8: rgba(255, 255, 255, 0.8);
  --text-color-9: rgba(255, 255, 255, 0.9);
  --font-size-sm: 0.24rem;
  --font-size-md: 0.28rem;
  --font-size-lg: 0.32rem;
  --font-size-xl: 0.36rem;
  --font-weight-thin: 400;
  --font-weight-md: 500;
  --font-weight-bold: 600;
}

html {
  font-size: 13.3333vw !important;
}

html,
body {
  margin: 0;
  padding: 0;
  list-style: none;
  text-decoration: none;
  -webkit-touch-callout: none;
  -webkit-overflow-scrolling: touch;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
  -webkit-tap-highlight-color: transparent;
  border: 0;
  -webkit-box-sizing: border-box;
  -moz-box-sizing: border-box;
  box-sizing: border-box;
  width: 7.5rem;
  height: 100%;
  background-color: #151515;
  font-family: system-ui, -apple-system, sans-serif;
}

div,
p,
span {
  font-size: 0.28rem;
  line-height: 1.2;
  color: rgba(255, 255, 255, 0.9);
}

.v-enter-active,
.v-leave-active {
  transition: opacity 0.3s ease;
}

.v-enter-from,
.v-leave-to {
  opacity: 0;
}

